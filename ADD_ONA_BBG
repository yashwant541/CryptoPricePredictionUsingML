import pandas as pd
import re

# Read the CSV file into a DataFrame
input_file = 'input.csv'
df = pd.read_csv(input_file)

# Function to split text
def split_text(text):
    match = re.match(r'((?:[A-Z]+(?:\s+|$))+)(.*)', text)
    if match:
        return match.groups()
    return text, ''  # Default case if no match is found

# Apply the function to the 'Country' column and create new columns
df[['UPPERCASE', 'CamelCase_or_lowercase']] = df['Country'].apply(split_text).apply(pd.Series)

# Save the resulting DataFrame to a new CSV file
output_file = 'output.csv'
df.to_csv(output_file, index=False)

print(f"Processed DataFrame saved to {output_file}")
