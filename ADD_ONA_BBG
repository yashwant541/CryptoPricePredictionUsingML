import tkinter as tk
from tkinter import ttk
import subprocess
import os

def connect():
    # Fetch values from GUI components
    path = path_entry.get()
    user_id = user_id_entry.get()

    # Example query with user ID
    query = f"echo > {user_id}_filename.txt"

    # Change directory command
    cd_command = f"cd /d {path}"

    # Full command to be executed
    full_command = f"{cd_command} && {query}"

    # Open cmd and execute the command
    subprocess.run(f"start cmd /k \"{full_command}\"", shell=True)

# Create the main window
window = tk.Tk()
window.title("Execute Command")

# Label and Entry for file path
path_label = ttk.Label(window, text="File Path:")
path_label.grid(row=0, column=0, padx=10, pady=10, sticky=tk.W)
path_entry = ttk.Entry(window, width=50)
path_entry.insert(0, r"C:\Games")  # Default path
path_entry.grid(row=0, column=1, padx=10, pady=10)

# Label and Entry for user ID
user_id_label = ttk.Label(window, text="User ID:")
user_id_label.grid(row=1, column=0, padx=10, pady=10, sticky=tk.W)
user_id_entry = ttk.Entry(window, width=50)
user_id_entry.grid(row=1, column=1, padx=10, pady=10)

# Button to run the query
connect_button = ttk.Button(window, text="Connect", command=connect)
connect_button.grid(row=2, column=0, columnspan=2, pady=20)

# Start the GUI event loop
window.mainloop()
