import pandas as pd

# Function to split rows based on semicolon-separated "Country" values
def split_countries(df):
    # Split the "Country" column into a list of countries for each row
    df['Country'] = df['Country'].str.split(';')
    
    # Explode the DataFrame so each country gets its own row
    df = df.explode('Country')
    
    return df

# Read the input CSV file
input_file = 'input.csv'  # Replace with your input file path
df = pd.read_csv(input_file)

# Split the rows based on semicolon-separated "Country" values
df_split = split_countries(df)

# Save the resulting DataFrame to a new CSV file
output_file = 'output.csv'  # Replace with your output file path
df_split.to_csv(output_file, index=False)

print(f"The output has been saved to {output_file}")
