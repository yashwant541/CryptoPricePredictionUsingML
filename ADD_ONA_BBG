# ============================================================
# recipe_xlsx_safe_final.py â€” Safe MSG Excel Extractor for Dataiku
# ============================================================

import os
import dataiku
from io import BytesIO
from pathlib import Path
import extract_msg
import traceback
import time

# ------------------------------------------------------------
# ğŸ•’ Force UTC timezone to avoid timestamp/timezone conflicts
# ------------------------------------------------------------
os.environ["TZ"] = "UTC"
try:
    time.tzset()
except Exception:
    pass

# ------------------------------------------------------------
# ğŸ“ Configuration â€” Replace with your Dataiku folder IDs
# ------------------------------------------------------------
input_folder = dataiku.Folder("YOUR_INPUT_FOLDER_ID")   # MSG input folder
output_folder = dataiku.Folder("YOUR_OUTPUT_FOLDER_ID")  # Output folder for Excel files

print("ğŸš€ Starting MSG Excel Extractor (Safe Mode)")
print("ğŸ“ Input Folder:", input_folder.get_id())
print("ğŸ“ Output Folder:", output_folder.get_id())
print("------------------------------------------------------------")

# ------------------------------------------------------------
# ğŸ§© Helper: Detect if attachment is Excel file
# ------------------------------------------------------------
def is_excel_file(filename, data_bytes):
    """
    Detect if an attachment is an Excel file based on name or magic bytes.
    """
    name_lower = (filename or "").lower()
    if name_lower.endswith(('.xlsx', '.xls', '.xlsm')):
        return True
    # Check for ZIP magic bytes (PK) â€” used by XLSX
    return data_bytes[:4] == b'PK\x03\x04'

# ------------------------------------------------------------
# ğŸ§¹ Helper: Clean file name safely
# ------------------------------------------------------------
def sanitize_filename(filename):
    invalid_chars = '<>:"/\\|?*'
    for char in invalid_chars:
        filename = filename.replace(char, '_')
    return filename.strip()

# ------------------------------------------------------------
# ğŸ“¨ Process MSG files
# ------------------------------------------------------------
msg_files = [f for f in input_folder.list_paths_in_partition() if f.lower().endswith(".msg")]
print(f"ğŸ“¬ Found {len(msg_files)} MSG file(s) to process.")
print("------------------------------------------------------------")

summary = []

for msg_path in msg_files:
    msg_name = Path(msg_path).name
    print(f"ğŸ“© Processing: {msg_name}")

    try:
        # Read MSG file from Dataiku folder
        with input_folder.get_download_stream(msg_path) as stream:
            msg_bytes = stream.read()

        # Load MSG safely (ignore timestamps)
        msg = extract_msg.Message(BytesIO(msg_bytes))

        attachments = msg.attachments or []
        print(f"ğŸ“ Found {len(attachments)} attachment(s):")

        excel_saved = 0
        excel_skipped = 0

        for i, att in enumerate(attachments, start=1):
            try:
                att_name = att.longFilename or att.shortFilename or f"attachment_{i}.bin"
                clean_name = sanitize_filename(att_name)
                att_data = att.data or b""

                if not att_data:
                    print(f"   âš ï¸ Empty attachment skipped: {clean_name}")
                    excel_skipped += 1
                    continue

                # Check if it's Excel
                if is_excel_file(clean_name, att_data):
                    excel_saved += 1
                    # Ensure correct extension
                    if not clean_name.lower().endswith(".xlsx"):
                        clean_name = Path(clean_name).stem + ".xlsx"
                    # Save to Dataiku output folder
                    output_folder.upload_data(clean_name, BytesIO(att_data))
                    print(f"   âœ… Saved Excel: {clean_name}")
                else:
                    print(f"   âŒ Skipped non-Excel: {clean_name}")
                    excel_skipped += 1

            except Exception as att_err:
                print(f"   âœ— Attachment error ({att_name}): {att_err}")
                excel_skipped += 1

        msg.close()
        summary.append((msg_name, len(attachments), excel_saved, excel_skipped))
        print(f"âœ… Completed {msg_name}: {excel_saved} Excel saved, {excel_skipped} skipped.\n")

    except Exception as e:
        print(f"âŒ Error processing {msg_name}: {e}")
        traceback.print_exc()
        summary.append((msg_name, 0, 0, 0))

# ------------------------------------------------------------
# ğŸ“Š Summary Report
# ------------------------------------------------------------
print("\n============================================================")
print("ğŸ§¾ EXTRACTION SUMMARY")
print("============================================================")
print(f"{'Email File':50} | {'Attachments':>12} | {'Excel Saved':>12} | {'Skipped':>8}")
print("-" * 85)
for row in summary:
    print(f"{row[0]:50} | {row[1]:12} | {row[2]:12} | {row[3]:8}")
print("============================================================")
print("ğŸ¯ Extraction complete. All Excel attachments saved successfully.")
