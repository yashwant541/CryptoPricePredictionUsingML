<!DOCTYPE html>
<html>
<head>
    <title>Email Attachment Reader</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        table { border-collapse: collapse; margin-top: 10px; width: 100%; }
        th, td { border: 1px solid #ccc; padding: 5px; text-align: left; }
        th { background: #f0f0f0; }
    </style>
</head>
<body>
    <h2>Upload .msg File</h2>
    <input type="file" id="msgFile" />
    <button onclick="uploadFile()">Upload & Extract</button>

    <h3>Email Info</h3>
    <pre id="emailInfo"></pre>

    <h3>Attachment Data</h3>
    <div id="tables"></div>

    <script>
        function uploadFile() {
            var fileInput = document.getElementById("msgFile").files[0];
            var formData = new FormData();
            formData.append("file", fileInput);

            fetch("/upload_msg", {
                method: "POST",
                body: formData
            })
            .then(res => res.json())
            .then(data => {
                if (data.error) {
                    alert("Error: " + data.error);
                    return;
                }

                document.getElementById("emailInfo").innerText =
                    "Subject: " + data.subject + "\n" +
                    "From: " + data.from + "\n" +
                    "To: " + data.to + "\n" +
                    "Date: " + data.date + "\n" +
                    "Attachments: " + data.attachments.join(", ");

                let tablesDiv = document.getElementById("tables");
                tablesDiv.innerHTML = "";

                for (let fname in data.data) {
                    let rows = data.data[fname];
                    if (rows.length === 0) continue;

                    let table = document.createElement("table");

                    // Header
                    let header = document.createElement("tr");
                    Object.keys(rows[0]).forEach(col => {
                        let th = document.createElement("th");
                        th.innerText = col;
                        header.appendChild(th);
                    });
                    table.appendChild(header);

                    // Rows
                    rows.forEach(row => {
                        let tr = document.createElement("tr");
                        Object.values(row).forEach(val => {
                            let td = document.createElement("td");
                            td.innerText = val === null ? "" : val;
                            tr.appendChild(td);
                        });
                        table.appendChild(tr);
                    });

                    tablesDiv.innerHTML += `<h4>${fname}</h4>`;
                    tablesDiv.appendChild(table);
                }
            })
            .catch(err => alert("Error: " + err));
        }
    </script>
</body>
</html>
