<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maker-Checker Email Analysis</title>
    <style>
        body { font-family: Arial, sans-serif; padding: 20px; }
        .container { max-width: 800px; margin: auto; }
        .upload-area { border: 2px dashed #aaa; padding: 30px; text-align: center; cursor: pointer; }
        .upload-area:hover { background-color: #f9f9f9; }
        #fileInput { display: none; }
        #results { margin-top: 20px; }
        pre { background: #f4f4f4; padding: 10px; border-radius: 5px; overflow-x: auto; }
        button { margin-top: 10px; padding: 8px 16px; }
    </style>
</head>
<body>
    <div class="container">
        <h2>Maker-Checker Email Analysis</h2>

        <div class="upload-area" id="uploadArea">
            <p>Click to select a .txt file</p>
            <input type="file" id="fileInput" accept=".txt">
        </div>

        <button id="processBtn" disabled>Process</button>

        <div id="results">
            <h3>Results:</h3>
            <pre id="resultsContent">No results yet.</pre>
        </div>
    </div>

    <script>
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');
        const processBtn = document.getElementById('processBtn');
        const resultsContent = document.getElementById('resultsContent');

        let uploadedFile = null;

        // Click to open file dialog
        uploadArea.addEventListener('click', () => fileInput.click());

        // File selected
        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                uploadedFile = e.target.files[0];
                processBtn.disabled = false;
                resultsContent.textContent = `Selected file: ${uploadedFile.name}`;
            }
        });

        // Process button clicked
        processBtn.addEventListener('click', async () => {
            if (!uploadedFile) return;

            resultsContent.textContent = "Processing...";

            const reader = new FileReader();
            reader.onload = async (e) => {
                const base64Data = btoa(e.target.result);

                try {
                    const response = await fetch('/ajax/do_analyze_emails', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({
                            file_name: uploadedFile.name,
                            file_data: "data:text/plain;base64," + base64Data
                        })
                    });

                    const text = await response.text();

                    let result;
                    try {
                        result = JSON.parse(text);
                    } catch {
                        resultsContent.textContent = "Error: Server returned HTML (wrong URL or not running in Dataiku Webapp)\n" + text;
                        return;
                    }

                    if (result.success) {
                        resultsContent.textContent = JSON.stringify(result.results, null, 2);
                    } else {
                        resultsContent.textContent = "Error: " + (result.error || "Unknown error");
                    }
                } catch (err) {
                    resultsContent.textContent = "Fetch error: " + err.message;
                }
            };

            reader.readAsBinaryString(uploadedFile);
        });
    </script>
</body>
</html>
