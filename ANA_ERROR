import pandas as pd

def check_files(file_a_path, file_b_path):
    try:
        # Load files based on their extension
        if file_a_path.endswith('.csv'):
            df_a = pd.read_csv(file_a_path)
            df_b = pd.read_csv(file_b_path)
        elif file_a_path.endswith('.xlsx'):
            df_a = pd.read_excel(file_a_path)
            df_b = pd.read_excel(file_b_path)
        else:
            print("Unsupported file format. Please provide CSV or XLSX files.")
            return

        # Check if dataframes are equal
        if df_a.equals(df_b):
            print("Yes, both files are exactly the same.")
        else:
            print("Nope, this is not the same file.")

    except Exception as e:
        print(f"An error occurred: {e}")

# Example usage
file_a_path = 'path/to/your/file_a.csv'  # Change this to the actual path
file_b_path = 'path/to/your/file_b.csv'  # Change this to the actual path

check_files(file_a_path, file_b_path)
