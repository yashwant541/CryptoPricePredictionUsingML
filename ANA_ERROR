import pandas as pd
import dataiku
import tempfile
import os
import shutil

# ------------------------------------------------------
# ğŸ”§ Configuration
# ------------------------------------------------------
input_folder = dataiku.Folder("XXXXXX")   # ğŸ“¥ Folder containing the 3 MVT pivot outputs
output_folder = dataiku.Folder("YYYYYY")  # ğŸ“¤ Folder to save filtered outputs

# ------------------------------------------------------
# ğŸ§  Helper: Keep only first + change rows
# ------------------------------------------------------
def keep_change_rows(df):
    df = df.copy()
    df = df.sort_values(by="Date")
    df = df.reset_index(drop=True)

    # Compare each row with the previous row across all tenor columns (excluding Date)
    change_mask = (df.iloc[:, 1:] != df.iloc[:, 1:].shift()).any(axis=1)

    # Always keep the first row + rows where any tenor MVT value changes
    keep_rows = change_mask | (df.index == 0)
    return df.loc[keep_rows].reset_index(drop=True)

# ------------------------------------------------------
# ğŸš€ Process each file
# ------------------------------------------------------
for file_path in input_folder.list_paths_in_partition():
    filename = os.path.basename(file_path)

    # Process only Excel or CSV files
    if not (filename.lower().endswith(".xlsx") or filename.lower().endswith(".csv")):
        continue

    print(f"ğŸ“„ Processing file: {filename}")

    # --------------------------------------------------
    # ğŸ“¥ Read the file safely from Dataiku stream
    # --------------------------------------------------
    tmp_input = tempfile.NamedTemporaryFile(delete=False)
    with input_folder.get_download_stream(filename) as stream:
        shutil.copyfileobj(stream, tmp_input)
    tmp_input.close()

    # Read into DataFrame
    if filename.lower().endswith(".xlsx"):
        df = pd.read_excel(tmp_input.name, dtype=str)
    else:
        df = pd.read_csv(tmp_input.name, dtype=str)

    os.unlink(tmp_input.name)  # clean temp file

    # --------------------------------------------------
    # ğŸ§¹ Sort by Date and convert numeric columns
    # --------------------------------------------------
    if "Date" not in df.columns:
        print(f"âš ï¸ Skipping {filename} â€” 'Date' column missing.")
        continue

    # Try to convert date column properly
    df["Date"] = pd.to_datetime(df["Date"], errors="coerce")
    df = df.dropna(subset=["Date"])  # remove invalid dates
    df = df.sort_values(by="Date").reset_index(drop=True)

    # Convert all other columns to numeric
    for col in df.columns[1:]:
        df[col] = pd.to_numeric(df[col], errors="coerce")

    # --------------------------------------------------
    # ğŸ§© Apply change-detection logic
    # --------------------------------------------------
    filtered_df = keep_change_rows(df)

    # --------------------------------------------------
    # ğŸ’¾ Save filtered output as CSV
    # --------------------------------------------------
    output_filename = os.path.splitext(filename)[0] + "_Filtered.csv"
    tmp_dir = tempfile.mkdtemp()
    tmp_path = os.path.join(tmp_dir, output_filename)

    filtered_df.to_csv(tmp_path, index=False)

    with open(tmp_path, "rb") as f:
        output_folder.upload_stream(output_filename, f)

    print(f"âœ… Saved filtered output: {output_filename}")

print("ğŸ¯ Completed filtering â€” only date-change rows kept and saved as CSV.")
