import pandas as pd
import dataiku
import tempfile
import os

# ------------------------------------------------------
# ğŸ”§ Configuration â€” Replace with your actual folder IDs
# ------------------------------------------------------
input_folder = dataiku.Folder("XXXXXXX")     # ğŸ“¥ Input Excel folder
output_folder = dataiku.Folder("YYYYYYY")    # ğŸ“¤ Output Excel folder

# ------------------------------------------------------
# ğŸ§  Helper â€” Clean merged-style Excel data
# ------------------------------------------------------
def clean_excel_sheet(df):
    if df.empty:
        return df
    df.dropna(how='all', inplace=True)
    for col in ['Period', 'Approval Date', 'Benchmark(s)']:
        if col in df.columns:
            df[col] = df[col].ffill()
    df = df.applymap(lambda x: x.strip() if isinstance(x, str) else x)
    return df

# ------------------------------------------------------
# ğŸš€ Main Execution
# ------------------------------------------------------
def main():
    print("ğŸ“‚ Reading Excel files from Dataiku input folder...")

    input_files = input_folder.list_paths_in_partition()
    print("ğŸ“„ Files found:", input_files)

    for file_path in input_files:
        if not file_path.lower().endswith((".xlsx", ".xls")):
            continue

        file_name = os.path.basename(file_path)
        base_name = os.path.splitext(file_name)[0]
        print(f"ğŸ” Processing {file_name}...")

        with input_folder.get_download_stream(file_path) as excel_stream:
            with tempfile.NamedTemporaryFile(delete=False, suffix=".xlsx") as tmp_excel:
                tmp_excel.write(excel_stream.read())
                tmp_excel.flush()

                excel = pd.ExcelFile(tmp_excel.name)

                for sheet in excel.sheet_names:
                    try:
                        df = pd.read_excel(tmp_excel.name, sheet_name=sheet)
                        cleaned_df = clean_excel_sheet(df)

                        with tempfile.NamedTemporaryFile(delete=False, suffix=".xlsx") as tmp_output:
                            cleaned_df.to_excel(tmp_output.name, index=False)
                            output_filename = f"{base_name}_{sheet}.xlsx"
                            print(f"ğŸ“¤ Uploading {output_filename} ...")

                            with open(tmp_output.name, "rb") as f:
                                output_folder.upload_stream(output_filename, f, overwrite=True)

                            print(f"âœ… Saved to output folder: {output_filename}")
                            os.remove(tmp_output.name)

                    except Exception as e:
                        print(f"âš ï¸ Error processing sheet '{sheet}' in {file_name}: {e}")

        if os.path.exists(tmp_excel.name):
            os.remove(tmp_excel.name)

    print("ğŸ All Excel sheets processed and saved successfully!")

# ------------------------------------------------------
if __name__ == "__main__":
    main()
