<!DOCTYPE html>
<html>
<head>
    <title>Dataiku Webapp Test</title>
</head>
<body>

<h2>Webapp Test</h2>
<button onclick="runTest()">Run Test</button>

<p id="result"></p>

<script>
function runTest() {
    fetch(getWebAppBackendUrl("/test"))
        .then(response => response.json())
        .then(data => {
            document.getElementById("result").innerHTML =
                "Backend Response: " + JSON.stringify(data);
        })
        .catch(error => {
            document.getElementById("result").innerHTML =
                "Error: " + error;
        });
}
</script>

</body>
</html>

