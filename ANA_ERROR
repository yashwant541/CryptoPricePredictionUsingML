from pdf2docx import Converter

def convert_pdf_to_word(pdf_file, word_file):
    # Initialize the Converter
    cv = Converter(pdf_file)
    
    # Convert the PDF to Word (docx format)
    cv.convert(word_file, start=0, end=None)
    
    # Close the converter
    cv.close()
    
    print(f"Conversion successful! The Word file is saved as {word_file}")

# Example usage
pdf_file = 'path_to_your_pdf.pdf'   # Input PDF file path
word_file = 'output_word_file.docx'  # Output Word file path

convert_pdf_to_word(pdf_file, word_file)
