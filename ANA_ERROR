IF 
abs([MONETARY_AMOUNT]) % 10000000 = 0
then '10000000'
ELSEIF
abs([MONETARY_AMOUNT]) % 1000000 = 0
then '1000000'
ELSEIF 
abs([MONETARY_AMOUNT]) % 100000 = 0
then '100000'
ELSEIF
abs([MONETARY_AMOUNT]) % 10000 = 0
then '10000'

ELSEIF [Amount + 1] % 10000000 = 0
then '9999999'
ELSEIF [Amount + 1] % 1000000 = 0
then '999999'
ELSEIF [Amount + 1] % 100000 = 0
then '99999'
ELSEIF [Amount + 1] % 10000 = 0
then '9999'

ELSE 'NA'
END
