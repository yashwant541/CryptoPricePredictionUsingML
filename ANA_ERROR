import pandas as pd

# Sample DataFrame
df = pd.DataFrame({
    'description': [
        'fresh water melon from farm',
        'pine apple juice in the bottle',
        'musk melon is tasty',
        'strawberries are sweet',
        'random text with no fruits'
    ]
})

# Multi-word keywords
keywords = ['water melon', 'pine apple', 'musk melon']

# Build regex pattern with word boundaries
pattern = '|'.join([kw.lower() for kw in keywords])

# Filter matched and unmatched
matched_df = df[df['description'].str.lower().str.contains(pattern)]
unmatched_df = df[~df['description'].str.lower().str.contains(pattern)]

# Output
print("Matched rows:")
print(matched_df)

print("\nUnmatched rows:")
print(unmatched_df)
