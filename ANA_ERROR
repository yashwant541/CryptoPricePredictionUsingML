import pandas as pd
import re

# Sample DataFrame
data = {
    'text': ['OLD FOX Is A brat', 'HELLO WORLD Cool Example', 'FOO BAR Something new', 'SAMPLE Case To Check']
}
df = pd.DataFrame(data)

# Function to split text
def split_text(text):
    match = re.match(r'((?:[A-Z]+(?:\s+|$))+)(.*)', text)
    if match:
        return match.groups()
    return text, ''  # Default case if no match is found

# Apply the function and create new columns
df[['UPPERCASE', 'CamelCase_or_lowercase']] = df['text'].apply(split_text).apply(pd.Series)

print(df)
