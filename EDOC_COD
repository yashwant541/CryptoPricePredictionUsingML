import os
import shutil

def extract_origami_excels(source_root, destination_folder):
    """
    Scans all subfolders of 'source_root' and copies Excel files 
    starting with 'ORIGAMI' to 'destination_folder'.
    """
    # Ensure destination exists
    os.makedirs(destination_folder, exist_ok=True)
    
    # Walk through all subfolders
    for root, dirs, files in os.walk(source_root):
        for file in files:
            if file.upper().startswith("ORIGAMI") and file.lower().endswith(('.xlsx', '.xls')):
                src_path = os.path.join(root, file)
                dest_path = os.path.join(destination_folder, file)
                
                try:
                    shutil.copy2(src_path, dest_path)
                    print(f"‚úÖ Copied: {src_path} ‚Üí {dest_path}")
                except Exception as e:
                    print(f"‚ùå Failed to copy {src_path}: {e}")
    
    print("\nüéâ All matching ORIGAMI Excel files copied successfully!")

if __name__ == "__main__":
    # User input for folders
    source_folder = input("Enter the path of the main folder to scan: ").strip('"')
    destination_folder = input("Enter the destination folder path to save files: ").strip('"')
    
    extract_origami_excels(source_folder, destination_folder)
