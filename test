def consolidate_lexicons(keywords_match_summary: pd.Series) -> pd.DataFrame:
    """
    Consolidate the lexicons in the keywords_match_summary DataFrame.

    Args:
        keywords_match_summary: Summary of keywords found in the chat logs.

    Returns:
        Consolidated DataFrame.
    """
    # Convert lexicons to lowercase
    keywords_match_summary.index = keywords_match_summary.index.str.lower()

    # Group by lowercase lexicon and sum up the counts
    consolidated_summary = keywords_match_summary.groupby(keywords_match_summary.index).sum()

    # Reset index to make lexicons a column again
    consolidated_summary = consolidated_summary.reset_index()

    # Rename columns
    consolidated_summary.columns = ['Lexicon', 'Count']

    return consolidated_summary
