                                            <small id="fileStats" class="text-muted"></small>
                                        </div>
                                        <div>
                                            <button class="btn btn-success btn-sm" onclick="analyzeUploadedFile()">
                                                Analyze File
                                            </button>
                                            <button class="btn btn-outline-secondary btn-sm" onclick="clearFile()">
                                                Change File
                                            </button>
                                        </div>
                                    </div>
