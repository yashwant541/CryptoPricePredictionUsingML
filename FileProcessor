    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showLoading(show) {
            document.getElementById('loading').style.display = show ? 'block' : 'none';
        }

        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('error').style.display = 'block';
            document.getElementById('results').style.display = 'none';
        }

        function hideError() {
            document.getElementById('error').style.display = 'none';
        }

        function analyzeEmails() {
            const emailText = document.getElementById('emailText').value.trim();
            
            if (!emailText) {
                showError('Please paste an email chain to analyze.');
                return;
            }

            showLoading(true);
            hideError();
            document.getElementById('results').style.display = 'none';

            // Call the backend analysis endpoint
            fetch('/dip/api/analysis/do_analyze_emails', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    email_text: emailText
                })
            })
            .then(response => response.json())
            .then(data => {
                showLoading(false);
                
                if (data.error) {
                    showError(data.error);
                } else if (data.success) {
                    displayResults(data.results);
                } else {
                    showError('Unknown error occurred');
                }
            })
            .catch(error => {
                showLoading(false);
                showError('Network error: ' + error.message);
            });
        }

        function displayResults(results) {
            // Set final roles
            document.getElementById('finalMaker').textContent = results.final_maker;
            document.getElementById('finalChecker').textContent = results.final_checker;

            // Set stats
            document.getElementById('totalEmails').textContent = results.stats.total_emails;
            document.getElementById('totalParticipants').textContent = results.stats.total_participants;
            document.getElementById('potentialMakers').textContent = results.stats.potential_makers_count;
            document.getElementById('potentialCheckers').textContent = results.stats.potential_checkers_count;

            // Display potential makers
            const makerCandidatesDiv = document.getElementById('makerCandidates');
            makerCandidatesDiv.innerHTML = results.potential_makers.map(maker => `
                <div class="d-flex justify-content-between align-items-center mb-1 p-2 border rounded">
                    <span>${maker.participant}</span>
                    <div>
                        <span class="badge bg-primary score-badge">Avg: ${maker.average_score.toFixed(1)}</span>
                        <span class="badge bg-secondary score-badge">Peak: ${maker.highest_score.toFixed(1)}</span>
                        <span class="badge bg-light text-dark score-badge">${maker.email_count} emails</span>
                    </div>
                </div>
            `).join('');

            // Display potential checkers
            const checkerCandidatesDiv = document.getElementById('checkerCandidates');
            checkerCandidatesDiv.innerHTML = results.potential_checkers.map(checker => `
                <div class="d-flex justify-content-between align-items-center mb-1 p-2 border rounded">
                    <span>${checker.participant}</span>
                    <div>
                        <span class="badge bg-success score-badge">Avg: ${checker.average_score.toFixed(1)}</span>
                        <span class="badge bg-secondary score-badge">Peak: ${checker.highest_score.toFixed(1)}</span>
                        <span class="badge bg-light text-dark score-badge">${checker.email_count} emails</span>
                    </div>
                </div>
            `).join('');

            // Display email analysis
            const emailTable = document.getElementById('emailAnalysisTable');
            emailTable.innerHTML = results.email_analysis.map(email => `
                <tr>
                    <td>${email.sequence}</td>
                    <td>${email.sender}</td>
                    <td>${email.date}</td>
                    <td>
                        <span class="badge ${email.maker_score > 50 ? 'bg-primary' : 'bg-light text-dark'}">
                            ${email.maker_score.toFixed(1)}
                        </span>
                    </td>
                    <td>
                        <span class="badge ${email.checker_score > 50 ? 'bg-success' : 'bg-light text-dark'}">
                            ${email.checker_score.toFixed(1)}
                        </span>
                    </td>
                </tr>
            `).join('');

            // Show results
            document.getElementById('results').style.display = 'block';
        }
    </script>
