    <script>
        // [KEEP ALL THE JAVASCRIPT CODE EXACTLY THE SAME AS BEFORE]
        // The JavaScript remains unchanged - just copy it from your previous version
        let currentFileData = null;
        let currentFileName = null;

        // Initialize step progress
        updateStepProgress(1);

        // Drag and drop functionality
        const uploadArea = document.getElementById('uploadArea');
        const fileInput = document.getElementById('fileInput');

        uploadArea.addEventListener('click', () => {
            fileInput.click();
        });

        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });

        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });

        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                handleFileSelect(files[0]);
            }
        });

        fileInput.addEventListener('change', (e) => {
            if (e.target.files.length > 0) {
                handleFileSelect(e.target.files[0]);
            }
        });

        function handleFileSelect(file) {
            if (file.type !== 'text/plain' && !file.name.toLowerCase().endsWith('.txt')) {
                showError('Please upload a .txt file');
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                currentFileData = e.target.result;
                currentFileName = file.name;
                
                // Preview the file
                previewUploadedFile();
            };
            reader.readAsDataURL(file);
        }

        function previewUploadedFile() {
            showLoading(true, "Previewing file...");
            updateStepProgress(1);
            
            // Use relative URL for Dataiku webapp
            fetch('do_parse_file', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    file_data: currentFileData,
                    file_name: currentFileName
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                showLoading(false);
                
                if (data.error) {
                    showError(data.error);
                } else if (data.success) {
                    displayFilePreview(data);
                    updateStepProgress(2);
                } else {
                    showError('Unknown error occurred');
                }
            })
            .catch(error => {
                showLoading(false);
                showError('Network error: ' + error.message);
            });
        }

        function displayFilePreview(data) {
            document.getElementById('fileName').textContent = data.file_name;
            document.getElementById('fileStats').textContent = 
                `${data.parsed_emails_count} emails, ${data.participants.length} participants`;
            
            // Display participants
            const participantsList = document.getElementById('participantsList');
            participantsList.innerHTML = '<strong>Participants:</strong> ' + 
                data.participants.map(p => `<span class="badge bg-secondary participant-badge">${p}</span>`).join(' ');
            
            // Display email preview
            const emailPreviewBody = document.getElementById('emailPreviewBody');
            emailPreviewBody.innerHTML = data.email_preview.map(email => `
                <tr class="email-row">
                    <td>${email.sequence}</td>
                    <td><strong>${email.sender}</strong></td>
                    <td><small>${email.receivers}</small></td>
                    <td>${email.subject || 'No subject'}</td>
                    <td>${email.date}</td>
                    <td><small class="text-muted">${email.body_preview}</small></td>
                </tr>
            `).join('');
            
            document.getElementById('filePreview').style.display = 'block';
            document.getElementById('emailPreviewTable').style.display = 'block';
            document.getElementById('results').style.display = 'none';
            hideError();
        }

        function processAnalysis() {
            if (!currentFileData) {
                showError('No file selected');
                return;
            }

            showLoading(true, "Analyzing email chain...");
            updateStepProgress(2);
            hideError();
            document.getElementById('results').style.display = 'none';

            // Use relative URL for Dataiku webapp
            fetch('do_analyze_emails', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    file_data: currentFileData,
                    file_name: currentFileName
                })
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                showLoading(false);
                
                if (data.error) {
                    showError(data.error);
                    updateStepProgress(2);
                } else if (data.success) {
                    displayResults(data.results);
                    updateStepProgress(3);
                } else {
                    showError('Unknown error occurred');
                    updateStepProgress(2);
                }
            })
            .catch(error => {
                showLoading(false);
                showError('Network error: ' + error.message);
                updateStepProgress(2);
            });
        }

        function clearFile() {
            currentFileData = null;
            currentFileName = null;
            fileInput.value = '';
            document.getElementById('filePreview').style.display = 'none';
            document.getElementById('results').style.display = 'none';
            updateStepProgress(1);
            hideError();
        }

        function analyzeNewFile() {
            clearFile();
            document.getElementById('uploadArea').scrollIntoView({ behavior: 'smooth' });
        }

        function updateStepProgress(step) {
            // Reset all steps
            document.querySelectorAll('.step').forEach(s => {
                s.classList.remove('active', 'completed');
            });
            
            // Update progress
            const progress = document.getElementById('stepProgress');
            if (step === 1) {
                progress.style.width = '0%';
                document.getElementById('step1').classList.add('active');
            } else if (step === 2) {
                progress.style.width = '50%';
                document.getElementById('step1').classList.add('completed');
                document.getElementById('step2').classList.add('active');
            } else if (step === 3) {
                progress.style.width = '100%';
                document.querySelectorAll('.step').forEach(s => {
                    s.classList.add('completed');
                });
                document.getElementById('step3').classList.add('active');
            }
        }

        function showLoading(show, message = "Processing...") {
            document.getElementById('loading').style.display = show ? 'block' : 'none';
            document.getElementById('loadingMessage').textContent = message;
        }

        function showError(message) {
            document.getElementById('errorMessage').textContent = message;
            document.getElementById('error').style.display = 'block';
            document.getElementById('results').style.display = 'none';
        }

        function hideError() {
            document.getElementById('error').style.display = 'none';
        }

        function displayResults(results) {
            // Set final roles
            document.getElementById('finalMaker').textContent = results.final_maker;
            document.getElementById('finalChecker').textContent = results.final_checker;

            // Show resolution method if applicable
            if (results.resolution_method && results.resolution_method !== 'standard') {
                document.getElementById('resolutionMethod').textContent = results.resolution_method;
                document.getElementById('resolutionAlert').style.display = 'block';
            } else {
                document.getElementById('resolutionAlert').style.display = 'none';
            }

            // Set stats
            document.getElementById('totalEmails').textContent = results.stats.total_emails;
            document.getElementById('totalParticipants').textContent = results.stats.total_participants;
            document.getElementById('potentialMakers').textContent = results.stats.potential_makers_count;
            document.getElementById('potentialCheckers').textContent = results.stats.potential_checkers_count;

            // Display potential makers
            const makerCandidatesDiv = document.getElementById('makerCandidates');
            makerCandidatesDiv.innerHTML = results.potential_makers.map(maker => `
                <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                    <div>
                        <strong>${maker.participant}</strong>
                        <div class="mt-1">
                            <span class="badge bg-primary score-badge">Avg: ${maker.average_score}</span>
                            <span class="badge bg-secondary score-badge">Peak: ${maker.highest_score}</span>
                            <span class="badge bg-light text-dark score-badge">${maker.email_count} emails</span>
                        </div>
                    </div>
                    ${maker.participant === results.final_maker ? '<span class="badge bg-success">Selected</span>' : ''}
                </div>
            `).join('');

            // Display potential checkers
            const checkerCandidatesDiv = document.getElementById('checkerCandidates');
            checkerCandidatesDiv.innerHTML = results.potential_checkers.map(checker => `
                <div class="d-flex justify-content-between align-items-center mb-2 p-2 border rounded">
                    <div>
                        <strong>${checker.participant}</strong>
                        <div class="mt-1">
                            <span class="badge bg-success score-badge">Avg: ${checker.average_score}</span>
                            <span class="badge bg-secondary score-badge">Peak: ${checker.highest_score}</span>
                            <span class="badge bg-light text-dark score-badge">${checker.email_count} emails</span>
                        </div>
                    </div>
                    ${checker.participant === results.final_checker ? '<span class="badge bg-success">Selected</span>' : ''}
                </div>
            `).join('');

            // Display email analysis
            const emailTable = document.getElementById('emailAnalysisTable');
            emailTable.innerHTML = results.email_analysis.map(email => `
                <tr>
                    <td>${email.sequence}</td>
                    <td><strong>${email.sender}</strong></td>
                    <td>${email.date}</td>
                    <td><small>${email.receivers}</small></td>
                    <td>
                        <span class="badge ${email.maker_score > 50 ? 'bg-primary' : 'bg-light text-dark'}">
                            ${email.maker_score}
                        </span>
                    </td>
                    <td>
                        <span class="badge ${email.checker_score > 50 ? 'bg-success' : 'bg-light text-dark'}">
                            ${email.checker_score}
                        </span>
                    </td>
                </tr>
            `).join('');

            // Show results
            document.getElementById('results').style.display = 'block';
            document.getElementById('results').scrollIntoView({ behavior: 'smooth' });
        }

        function downloadResults() {
            // Simple download functionality
            const results = {
                maker: document.getElementById('finalMaker').textContent,
                checker: document.getElementById('finalChecker').textContent,
                timestamp: new Date().toISOString()
            };
            
            const dataStr = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(results, null, 2));
            const downloadAnchorNode = document.createElement('a');
            downloadAnchorNode.setAttribute("href", dataStr);
            downloadAnchorNode.setAttribute("download", "maker-checker-results.json");
            document.body.appendChild(downloadAnchorNode);
            downloadAnchorNode.click();
            downloadAnchorNode.remove();
        }
    </script>
</body>
</html>
